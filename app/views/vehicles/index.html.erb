<div class="container">
  <h1>Available Vehicles</h1>
  <div class="vehicles-index">
    <% @vehicles.each do |vehicle| %>
      <%= link_to  vehicle_path(vehicle) do  %>
        <div class="car-card">
          <% if vehicle.photo.attached? %>
            <%= cl_image_tag vehicle.photo.key %>
          <% else%>
            <img src="https://source.unsplash.com/collection/2102317/1600x900" alt="">
          <% end %>
          <div class="text">
            <h3> <%= vehicle.name %></h3>
          </div>
        </div>
      <% end %>
    <% end %>
    <%= link_to  new_vehicle_path do%>
      <button class="new-car-btn text-center">
      <i id="car-icon" class="fas fa-car"></i>
      <br>
      <i id="plus-icon" class="fas fa-plus"></i>
      </button>
    <% end %>
  </div>
  <div class="btn-map">
    <a><%= link_to "Go to Map View", map_path %></a>
  </div>
</div>
