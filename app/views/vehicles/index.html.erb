<div class="container">


    <div class="flex-container">
      <div class="flex-item-grow">
         <%= form_tag vehicles_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a vehicle"
        %>
      </div>

      <div >
          <%= submit_tag "Search", class: "btn btn-primary" %>
      </div>

      <% end %>
    </div>

  <h1>Available Vehicles</h1>
  <div class="vehicles-index">
    <% @vehicles.each do |vehicle| %>
      <%= link_to  vehicle_path(vehicle) do  %>
        <div class="car-card">
          <% if vehicle.photo.attached? %>
            <%= cl_image_tag vehicle.photo.key %>
          <% else%>
            <img src="https://source.unsplash.com/collection/2102317/1600x900" alt="">
          <% end %>
          <div class="text">
            <h3> <%= vehicle.name %></h3>
          </div>
        </div>
      <% end %>
    <% end %>
    <div class="car-card">
      <img src="" alt="">
      <div class="text">
        <h3> <%= link_to "New Vehicle", new_vehicle_path %> </h3>
      </div>
    </div>
  </div>
  <div class="btn-map">
    <a><%= link_to "Go to Map View", map_path %></a>
  </div>
</div>
