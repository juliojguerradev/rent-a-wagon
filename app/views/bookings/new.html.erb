<div class="container">
  <%= render "form", vehicle: @vehicle, booking: @booking %>
</div>

<% if @vehicle.bookings.any? %>
<div class="container mt-4">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Start Date</th>
        <th scope="col">End Date</th>
        <th scope="col">Status</th>
        <th scope="col">User</th>
      </tr>
    </thead>
    <tbody>
      <% @vehicle.bookings.each_with_index do |booking, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= booking.start_date.strftime("%d of %B, %Y") %></td>
          <td><%= booking.end_date.strftime("%d of %B, %Y") %></td>
          <td><%= booking.status %></td>
          <td><%= User.find(booking.user_id).first_name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% end %>
